/* 设置页面样式 */
.container {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  background-color: #ffffff;
}

.list {
  width: 100%;
  margin-top: 20rpx;
}

.item {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
}

.item:active {
  background-color: #e0e0e0;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.icon image {
  width: 100%;
  height: 100%;
}

.text {
  flex: 0.9;
  margin-left: 20rpx;
  font-size: 28rpx;
	color: #333333;

}

.arrow {
  width: 30rpx;
  height: 30rpx;
}

.arrow image {
  width: 100%;
  height: 100%;
}
