page {
  background-color: rgb(247, 233, 233);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items:flex-start
  
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item {
  background-color: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  height: 50px;
  line-height: 50px;
  border-radius: 10px;
  margin-top: 2px;
  padding-left: 5px;
}

.album {
  display: flex;
  height: 100px;
}
.album-image{
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 10px;
  border-radius: 2px;
}