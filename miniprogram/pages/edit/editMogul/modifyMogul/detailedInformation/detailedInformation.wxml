<view class="container">
	<view class="info">
		<view class="user">
			<view class="user-image" mark:id="{{mogul.information.mogulImageHttps}}">
				<image mode="aspectFill" src="{{mogul.information.mogulImageHttps}}" bindtap="previewImage"/>
			</view>
			<view class="user-text">
				<view>姓名：{{mogul.information.name}}　性别：{{mogul.information.sex}}</view>
				<view>本科:{{mogul.information.grade}}-{{mogul.information.college}}-{{mogul.information.speciality}}</view>
				<view>硕士:{{mogul.information.school}}</view>
				<view>个人荣誉：</view>
				<view wx:for="{{mogul.information.honor}}" wx:key="*this">-{{item}}</view>
			</view>
		</view>
		<view class="information">
			<scroll-view class="scroll-information" scroll-y="true">
				<view class="box" wx:for="{{mogul.box}}" wx:key="*this">
					<text wx:for="{{item.text}}" class="information-text">{{"　　"+item+"\n"}}</text>
					<scroll-view class="scroll-box" scroll-x="true">
						<view class="image-view">
							<view wx:for="{{item.image}}" class="image-box" id="{{item.imageHttps}}">
								<image class="information-image" src="{{item.imageHttps}}" id="{{item.imageHttps}}" mode="aspectFill" bindtap="previewImage"></image>
							</view>
						</view>
					</scroll-view>
				</view>
			</scroll-view>
		</view>
	</view>
	<view>
		<view class="layer1"></view>
		<view class="layer2"></view>
		<view class="layer3"></view>
	</view>
</view>