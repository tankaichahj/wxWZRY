/* pages/info/info.wxss */
.a {
  display: grid;
	justify-content: space-between;
	width: 700rpx;
  grid-template-columns: 70%  30%; /* 设置网格宽度小于容器宽度 */
  grid-gap: 8px;
  background-color: #ffffff;
  padding: 10px;
}
.top_tip {
  font-size: 30px;
  font-family: PingFang SC;
  font-weight: 400;
  color: #000000;
  margin-bottom: 28px;
}



input{
  text-align: right ;
  padding-right: 5px;
  
}



.picker {
  text-align: right;
  padding-right: 5px;
}

.picker-text {
	font-size: 15px;
	
	text-align: right;
}
