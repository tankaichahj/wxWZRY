/* pages/squads/squads.wxss */
.top {
  display: flex;
  flex-direction: column;
  background-color: rgb(218, 218, 218);
  
}

.TeamName {
  display: grid;
  place-content: center;
  font-size: 40rpx
}

.user-list {
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.user-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 5px;
  height: 50px;
  border-radius: 15px;
  background-color: rgba(208, 213, 218, 0.63);
}

.user-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.user-info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.user-name-gender {
  display: flex;
}

.user-name {
  font-weight: bold;
  background-image:
    -webkit-linear-gradient(45deg, #2c3e50, #27ae60, #2980b9, #e74c3c, #8e44ad);
  background-size: 300%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  animation: bgAnimation 6s linear infinite;
}



.user-gender {
  margin-left: 10px;
}

.user-positionbest {
  margin-left: 10px;
  color: rgb(247, 56, 56);
}

.user-positionother {
  margin-left: 10px;
  color: rgb(71, 59, 236);
}

.user-nickname-rank {
  color: gray;
  margin-left: 10px;
}

.user-group {
  color: green;
}


@keyframes bgAnimation {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

.loading text {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999;
}
@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  height: 100vh;
}

.member {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.name {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.gender,
.rank,
.position,
.signature {
  font-size: 16px;
  color: #666;
  margin-bottom: 5px;
}



.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200px;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  z-index: 2222;
}

.popup .avatar {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
}

.popup .name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.popup .gender,
.popup .rank,
.popup .position,
.popup .qq,
.popup .signature {
  font-size: 20px;
  color: #666;
  margin-bottom: 5px;
}
