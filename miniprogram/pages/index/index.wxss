/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #e0e0e0c4;
  padding-bottom: 60rpx;
}

swiper {
  width: 750rpx;
  background-color: #ffffff6b;
  height: 200px;
  margin-bottom: 28rpx;
}

image {
  width: 750rpx;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.grid-container-1 {
  display: grid;
  width: 750rpx;
  height: 80px;
  justify-content: space-around;
  align-content: center;
  grid-template-columns: auto auto auto auto;
  grid-gap: 10px;
  padding: 10px;
  margin-bottom: 28rpx;

}

.grid-container-1 view {
  background-color: rgba(241, 226, 245, 0.8);
  text-align: center;
  padding: 5px 0;
  font-size: 30px;
}

