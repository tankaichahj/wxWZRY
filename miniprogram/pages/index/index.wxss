/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #000000a8;
  padding-bottom: 60rpx;
  background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%)
}

.text {
  color: rgb(230, 223, 223);
}

.title {
  color: rgb(230, 223, 223);
}

swiper {
  width: 750rpx;
  background-color: #ffffff00;
  height: 200px;
  margin-bottom: 28rpx;
}

image {
  width: 750rpx;
}



.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.grid-container-1 {
  display: grid;
  width: 750rpx;
  height: 80px;
  justify-content: space-around;
  align-content: center;
  grid-template-columns: auto auto auto auto;
  grid-gap: 10px;
  padding: 10px;
  margin-bottom: 28rpx;

}

.grid-container-1 view {
  background-color: rgba(210, 139, 230, 0.39);
  text-align: center;
  padding: 5px 0;
  font-size: 30px;
}

.grid-container-2 {
  display: grid;
  width: 700rpx;
  height: 200px;
  justify-content: space-around;
  align-content: center;
  grid-template-columns: auto auto;
  grid-gap: 10px;
  padding: 10px;
}

.grid-container-2 view {
  background-color: rgba(230, 107, 107, 0.116);
  text-align: center;
  padding: 15px 0;
  font-size: 30px;
}

.item-1 {
  display: flex;
  width: 70px;
  height: 60px;
  border-radius: 25px;
  text-align: center;
  flex-direction: column;
  margin-top: 2px;
  box-shadow: -3px -3px 3px rgba(255, 255, 255, 0.1),
    2px 2px 6px rgba(0, 0, 0, 0.8);
}


.item-2 {
  display: flex;
  width: 150px;
  height: 60px;
  border-radius: 25px;
  text-align: center;
  flex-direction: column;
  margin-top: 2px;
  box-shadow: -3px -3px 3px rgba(255, 255, 255, 0.1),
    2px 2px 6px rgba(0, 0, 0, 0.8);
}

.item-2:active {
  box-shadow: -2px -2px 3px rgba(255, 255, 255, 0.1),
    2px 2px 6px rgba(0, 0, 0, 0.6),
    inset -2px -2px 10px rgba(255, 255, 255, 0.05),
    inset 2px 2px 10px rgba(0, 0, 0, 0.5);
}
.item-1:active {
  box-shadow: -2px -2px 3px rgba(255, 255, 255, 0.1),
    2px 2px 6px rgba(0, 0, 0, 0.6),
    inset -2px -2px 10px rgba(255, 255, 255, 0.05),
    inset 2px 2px 10px rgba(0, 0, 0, 0.5);
}

.icon {
  width: 40px;
  height: 40px;
  margin: auto;
}

.text {
  margin-top: 2px;
  font-size: 13px
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-bottom: 20px;
}

