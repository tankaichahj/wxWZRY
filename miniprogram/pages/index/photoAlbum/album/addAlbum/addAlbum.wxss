/* pages/index/photoAlbum/album/addAlbum/addAlbum.wxss */
.top {
	display: grid;
	grid-template-columns: 1fr 1fr 50px;
	justify-content: space-between;
	padding-right: 10px;
	height: 25px;
	padding-top: 10px;
	padding-left: 10px;
}
.jindu{
	position: fixed;
	margin-bottom: 30px;
	width: 100%;
	
	top: -8px;
	
}
.up {
	background-color: rgb(3, 88, 216);
	color: rgb(255, 255, 255);
	border-radius: 5px;

}

.up text {
	position: absolute;
	transform: translate(8px, 1px)
}

.scroll-view {
	padding: 10rpx;
	height: 1000rpx;
	width: 700rpx;
	background-color: rgb(250, 250, 250);
	transform: translate(20rpx,20rpx)
	
}

.upAlbum {
	padding: 8px;
	margin-left: 10px;
	margin-right: 10px;
	margin-top: 5px;
	display: grid;
	grid-template-columns: 1fr 200px 50px;
	grid-row-gap:10px;
	justify-items:space-around;
	align-items:center;
	height: 30px;
	background: rgb(255, 255, 255);
	border-radius: 5px;
}
.upAlbum view{
	height: 30px;
	font-size: 20px;
}

