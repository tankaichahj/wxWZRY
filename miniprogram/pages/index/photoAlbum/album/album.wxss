}
.top_tip{
	width: 100%;
	text-align: center;
	padding-bottom: 10px;

}
.scroll-view {
	padding: 10rpx;
	height: 1100rpx;
	width: 100%;
	background-color: rgb(250, 250, 250);
	
	
}

.editAlbum {
	background-color: rgba(0, 87, 218, 0.87);
	color: rgb(255, 255, 255);
	border-radius: 5px;
	position: fixed;
	width: 75px;
	top:10px;
	right: 10px;
	height: 20px;

}

.editAlbum text {
	width: 65px;
	height: 20px;
	
	font-size: 15px;
	position: absolute;
	color: rgba(255, 255, 255, 0.781);
	transform: translate(8px, 1px)
}